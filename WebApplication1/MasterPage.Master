    .navT{
        font-size:20px;
        flex:1;
        text-align:right;
    }

    .navT ul{
        display:inline-block;
        list-style-type:none;
    }
    .navT ul li{
        display:inline-block;
        margin-right:20px;
    }

    .nav-linkT{
        text-decoration:none;
        color: var(--textColorBlack);
    }

    .containerT{
        max-width:1300px;
        margin:auto;
        padding-left:25px;
        padding-right:25px;
    }


    /* Dropdown styles */
        .dropdown {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #ffff;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            transition: 5s;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-content a {
            color: var(--textColorBlack);
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-content a:hover {
            background-color: var(--bgColor);
            color: var(--textColorBlack);
        }

        /* FAVOURITES*/
    .contador {
        flex: 0;
        padding: 5px;
        align-content: space-around;
        color: var(--textColorWhite);
        background-color: var(--bgColor);
        border-radius: 50%;
        width: 15px;
        height: 15px;
        align-items: center;
        position: absolute;
        display: flex;
        max-width: none;
        font-size: 10px;
        top: -5px;
        right: -5px;
    }

    .favourites{
        position:relative;
    }



